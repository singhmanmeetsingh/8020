<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      /* Reset some default styles */
      body,
      h1,
      h2,
      h3,
      p,
      ul,
      li,
      table {
        margin: 0;
        padding: 0;
      }

      /* Body styles */
      body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
      }

      /* Header styles */
      header {
        background-color: #333;
        color: white;
        text-align: center;
        padding: 1rem 0;
      }

      /* Navigation styles */
      nav {
        background-color: #444;
        text-align: center;
      }

      nav ul {
        list-style: none;
        padding: 1rem 0;
      }

      nav ul li {
        display: inline;
        margin-right: 1rem;
      }

      nav ul li a {
        text-decoration: none;
        color: white;
        font-weight: bold;
      }

      /* Main content styles */
      main {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
      }

      /* Table styles */
      table {
        width: 100%;
        border-collapse: collapse;
      }

      th,
      td {
        padding: 0.5rem;
        text-align: left;
      }

      th {
        background-color: #444;
        color: white;
      }

      tr:nth-child(even) {
        background-color: #f2f2f2;
      }

      /* Footer styles */
      footer {
        text-align: center;
        padding: 1rem 0;
        background-color: #444;
        color: white;
      }
    </style>
    <title>Manage Pages</title>
  </head>
  <body>
    <header>
      <h1>My Blog</h1>
    </header>

    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/dashboard/add">Add Page</a></li>
        <li><a href="/dashboard/manage">Manage Pages</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>

    <main>
      <h1>Manage Pages</h1>
      <% if (pages.length < 1) { %>
      <h2>No pages found. Add more pages to manage.</h2>
      <a href="/dashboard/add"><input type="button" value="Add Page" /></a>
      <% } else { %>
      <table>
        <tr>
          <th>Page Name</th>
          <th>Actions</th>
        </tr>
        <% pages.forEach(function(page) { %>
        <tr>
          <td><%= page.title %></td>
          <td>
            <form method="post" action="delete" style="display: inline">
              <input type="hidden" name="slug" value="<%= page.slug %>" />
              <input type="submit" value="Delete" />
            </form>
            <a href="/dashboard/edit/<%= page.slug %>"
              ><input type="submit" value="Edit"
            /></a>
          </td>
        </tr>
        <% }) %>
      </table>
      <% } %>
    </main>
    <footer>
      <p>&copy; 2023 Copyright. Mayank Thite & Manmeet Singh.</p>
    </footer>
  </body>
</html>
